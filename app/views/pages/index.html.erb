  <div id="controls">
    <div id="math-risk-slider" class="risk-slider"></div>
      <div id="slider-labels">
        <div class="slider-label text-left">Advanced</div>
        <div class="slider-label text-left">Proficient</div>
        <div class="slider-label text-right">Needs Improvement</div>
        <div class="slider-label text-right">Failing</div>
      </div>
      <div id="legend">
        Risk: Low Medium High
      </div>
      <div id="homeroom-dropdown" class="dropdown">
        <p>Homeroom:</p>
          <select id="homeroom-select">
            <% @rooms_by_name.each do |r| %>
              <option <% if r == @room %>selected<% end %>><%= r.name %></option>
            <% end %>
          </select> 
        <div class="overlay-arrow">&#9660;</div>
      </div>
    </div>
    <% @risk_categories.each do |category| %>
      <% students = @students[category]  %>
      <div class="student-group" data-risk-level="<%= category %>">
        <h3><%= category %> risk <span class="smalltype">(<%= students.length %> out of <%= @number_of_students %> students)</span> </h3>
        <div class="subnav">
          <ul class="nav">
           <li class="tab-toggle activetab" data-type="demo" data-index="<%= category %>">Demographics</li>
           <li class="tab-toggle" data-type="mcas" data-index="<%= category %>">MCAS</li> 
         </ul>
        </div>
        <table border="0" cellspacing="0" cellpadding="10" class="tab" data-type="demo" data-index="<%= category %>">
          <tr>
            <td class="header" class="radius">New ID</td>
            <td class="header">Grade</td> 
            <td class="header">Hispanic/Latino</td>
            <td class="header">Race</td>
            <td class="header">Limited English</td>
            <td class="header">Low Income</td>
          </tr>
          <% students.each do |s| %>
            <tr>
              <td><%= s.new_id %></td>
              <td><%= s.grade %></td>
              <td><%= s.hispanic_latino %></td>
              <td><%= s.race %></td>
              <td><%= s.limited_english %></td>
              <td><%= s.low_income %></td>
            </tr>
          <% end %>
        </table>
        <table border="0" cellspacing="0" cellpadding="10" class="tab" data-type="mcas" data-index="<%= category %>">
          <tr>
            <td class="header" class="radius">New ID</td>
            <td class="header">ELA Scaled</td>
            <td class="header">ELA Performance</td>
            <td class="header">ELA Growth</td>
            <td class="header">Math Scaled</td>
            <td class="header">Math Performance</td>
            <td class="header">Math Growth</td>
            <td class="header" class="radius">SPED</td>
          </tr>
          <% students.each do |s| %>
            <tr>
              <td><%= s.new_id %></td>
              <td><%= s.ela_scaled %></td>
              <td><%= s.ela_performance %></td>
              <td><%= s.ela_growth %></td>
              <td><%= s.math_scaled %></td>
              <td><%= s.math_performance %></td>
              <td><%= s.math_growth %></td>
              <td><%= s.sped %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% end %>
    <div id="init-room-id" data-room-id="<%= @room.id %>"></div>